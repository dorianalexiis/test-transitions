<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.testtranstisitions">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.modules.changetext.ChangeTextActivity"
            android:label="@string/title_activity_change_text"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.modules.recolor.RecolorActivity"
            android:label="@string/title_activity_recolor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.modules.transitionname.TransitionNameActivity"
            android:label="@string/title_activity_transition_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.modules.pathcurved.PathCurvedActivity"
            android:label="@string/title_activity_path_curved"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.modules.image.ImageActivity"
            android:label="@string/title_activity_image"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.modules.grid.GridActivity"
            android:label="@string/title_activity_grid"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.modules.detail.DetailActivity" />
        <activity android:name=".ui.modules.button.ButtonActivity" />
        <activity android:name=".ui.modules.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>